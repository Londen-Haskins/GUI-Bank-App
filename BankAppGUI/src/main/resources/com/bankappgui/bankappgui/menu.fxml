<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bankappgui.bankappgui.controllers.MenuController"
          prefHeight="250.0" prefWidth="400.0">
    <padding>
        <Insets bottom="10.0" left="15.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Welcome to 'Praise The Sun Banking'"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Button text="ATM Operations" onAction="#checkAcct"
            GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button text="Transaction Log" onAction="#showLog"
            GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button text="Exit" onAction="#closeApp"
            GridPane.columnIndex="0" GridPane.rowIndex="7"/>

</GridPane>
